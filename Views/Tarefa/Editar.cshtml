@model desafio_mvc_gerenciador_de_tarefas.Models.Tarefa

@{
    ViewData["Title"] = "Editar uma nova tarefa";

}

<h1>Editar uma nova tarefa</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
            </div>
             <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
            </div>
             <div class="form-group">
                <label asp-for="Concluido" class="control-label"></label>
                <input type="checkbox" asp-for="Concluido" class="form-check-input" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</hr>
<br>
<div>
    <a asp-action="Index">Voltar</a>
</div>